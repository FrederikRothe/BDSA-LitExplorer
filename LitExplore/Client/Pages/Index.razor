@using LitExplore.Client.InfoViews

<PageTitle>Index</PageTitle>

<h1>Welcome to LitExplore!</h1>


<NavLink class="nav-link" href="viewpaperinformation">
    <div style="background-color:powderblue;width:10pt;height:10pt" @onmouseover="hoverOnPaper" @onmouseout="hoverOnPaper"></div>
</NavLink>
<div hidden=@hidePaperHoverWindow><PaperPartialInfo paper=@paper/></div>

@code {

    private Paper paper = TestEntities.genericPaper;
    private bool hidePaperHoverWindow = true;
    private void hoverOnPaper() {
        hidePaperHoverWindow = !hidePaperHoverWindow;
    }

}