@page "/viewpaperinformation"

<PageTitle>View Paper Information</PageTitle>

<section>
    <label for="title">Paper Title:</label>
    <h1 id="title">@Title</h1>
</section>
<section>
    <label for="authors">Author(s):</label>
    <h2 id="authors">@Authors</h2>
</section>
<section>
    <label for="releasedate">Published at:</label>
    <h4 id="releasedate">@PublishDate</h4>
</section>
<section>
    <label for="content">Content:</label>
    <p id="content">@Content</p>
</section>




@code {
    [Parameter]
    public Paper currentPaper { get; set; } = new Paper("doc", new List<string>() { "JK ROWLING", "HAKUNA MATATA", "HJÃ†LP"
}, "HIHIHAHA", 2012, 12, 12, null);

    private string Title { get => currentPaper.Title; }
    private string Authors
    {
        get
        {
            var sb = new StringBuilder();
            sb.Append("Authors: ");
            foreach (var a in currentPaper.Authors)
            {
                sb.Append(a);
                if (a != currentPaper.Authors.Last())
                {
                    sb.Append(',');
                    sb.Append(' ');
                }
            }
            return sb.ToString();
        }
    }
    private string Content { get => currentPaper.Document; }
    private string PublishDate
    {
        get
        {
            var currentDate = currentPaper.PublishDate;
            var s = currentDate.Day + "/" + currentDate.Month + "/" + currentDate.Year;
            return s;
    }
    }


}
