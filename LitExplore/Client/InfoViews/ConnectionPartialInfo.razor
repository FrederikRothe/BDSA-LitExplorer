@if (conn.Connections.Contains(ConnectionType.Author)) {
    <p>Author(s): @authors</p>
}
@if (conn.Connections.Contains(ConnectionType.Tag)) {
    <p>Tag(s): @tags</p>
}
@if (conn.Connections.Contains(ConnectionType.Reference)) {
    <p>@conn.Paper1.Title references @conn.Paper2.Title</p>
}
@if (conn.Connections.Contains(ConnectionType.Other)) {
    <p>You have connected these papers yourself.</p>
}



@code {
    [Parameter]
    public Connection conn { get; set; } = TestEntities.testconn1;
    private string authors
    {
        get 
        {
            string result = "";
            foreach (Author author in conn.Paper1.Authors) 
            {
                if (conn.Paper2.Authors.Contains(author)) {
                    result += author.Name + ", ";
                }
            }
            return result.Substring(0,result.Length-2);
        }
    }
    private string tags
    {
        get 
        {
            string result = "";
            foreach (Tag tag in conn.Paper1.Tags) 
            {
                if (conn.Paper2.Tags.Contains(tag)) {
                    result += tag.Name + ", ";
                }
            }
            return result.Substring(0,result.Length-2);
        }
    }
}