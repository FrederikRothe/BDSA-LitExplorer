<h2>Authours</h2>
<p>@authors</p>
@if (paper.TagNames != null) {
    <h2>Tags</h2>
    <p>@tags</p>
}

@code {
    [Parameter]
    public PaperDTO paper { get; set; } = null!;
    private string authors 
    {
        get 
        {
            string result = "";
            foreach (string author in paper.AuthorNames) 
            {
                result += author + ", ";
            }
            return result.Substring(0,result.Length-2);
        }
    }
    private string tags
    {
        get
        {
            string result = "";
            foreach (string tag in paper.TagNames) 
            {
                result += tag + ", ";
            }
            return result.Substring(0,result.Length-2);
        }
    }
}