<div class="modal fade modal-dialog modal-dialog-centered modal-dialog-scrollable" id="paperInfoWindow" style="display: none;" tabindex="-1" aria-labelledby="paperModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@paper.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <PaperPartialInfo paper=@paper />
                <p id="releasedate">Published at: @PublishDate</p>
                <p id="content">Content:<br/>@paper.Document</p>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Paper paper {get;set;} = TestEntities.genericPaper;

    private string PublishDate
    {
        get
        {
            var currentDate = paper.PublishDate;
            var s = currentDate.Day + "/" + currentDate.Month + "/" + currentDate.Year;
            return s;
        }
    }
}